{
    "name": "decodelabs/elementary",
    "description": "Shared base markup handling library",
    "type": "library",
    "keywords": [ "markup", "html", "xml" ],
    "license": "MIT",
    "authors": [ {
            "name": "Tom Wright",
            "email": "tom@inflatablecookie.com"
        } ],
    "require": {
        "php": "^8.4",

        "decodelabs/coercion": "^0.3",
        "decodelabs/collections": "^0.11",
        "decodelabs/exceptional": "^0.5.3",
        "decodelabs/glitch-support": "^0.5.1"
    },
    "require-dev": {
        "decodelabs/phpstan-decodelabs": "^0.7"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Elementary\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.6.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
